<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000"
    android:id="@+id/news_share_id"
    android:layout_width="500dp"
    android:layout_height="700dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"

        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="1dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:id="@+id/news_image_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:minLines="2"
                android:maxLines="2"
                android:id="@+id/news_head_share"
                android:fontFamily="@font/robotomedium"
                android:lineSpacingExtra="2dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text="Converse College closed for classes due to COVID-19"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_desc_share"
                android:fontFamily="@font/helvetica_neue_light  "
                android:lineSpacingExtra="4dp"
                android:maxLines="9"
                android:textColor="#616161"
                android:textSize="15sp"
                android:layout_marginTop="6sp"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="Converse has previously partnered with 'TheSoloist.' on three drops, with Japanese founder Takahiro Miyashita, known for his bold designs, made to stand out. The two brands have collaborated on previous drops including the ERX 260 Hi and the VLTG Mission-V collection. For its latest Converse X TheSoloist collaboration, the duo partner for the"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>