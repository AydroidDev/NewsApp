<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <ImageView
        android:id="@+id/prod_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scrollbars="none">
        <LinearLayout

            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                app:cardElevation="0dp"
                android:layout_width="260dp"
                android:layout_height="130dp"
                app:cardCornerRadius="20dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="30dp"
                >
                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        app:cardElevation="0dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="100dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dryer"

                    />
                    </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/head1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hair Dryer"
                        android:fontFamily="@font/prox_bold"
                        android:layout_marginTop="15dp"
                        android:textSize="19sp"
                        android:textColor="#212121"/>
                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Philips Mabic Pro (Matte Pink)"
                        android:textSize="15sp"
                        android:fontFamily="@font/prox_semi_bold"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"/>
                    <TextView
                        android:id="@+id/price1"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$250"
                        android:fontFamily="@font/prox_bold"
                        android:textSize="20sp"/>
                </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                app:cardElevation="0dp"
                android:visibility="gone"
                android:layout_width="260dp"
                android:layout_height="130dp"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="20dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_margin="15dp"
                        app:cardElevation="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">
                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gownbath"

                            />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/head2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bath Gown"
                            android:fontFamily="@font/prox_bold"
                            android:layout_marginTop="15dp"
                            android:textSize="19sp"
                            android:textColor="#212121"/>
                        <TextView

                            android:id="@+id/desc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="White Stylish Bath Gown"
                            android:textSize="15sp"
                            android:fontFamily="@font/prox_semi_bold"
                            android:layout_marginTop="7dp"/>
                        <TextView
                            android:id="@+id/price2"
                            android:layout_marginTop="8dp"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$250"

                            android:layout_gravity="bottom"
                            android:fontFamily="@font/prox_bold"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="260dp"
                android:layout_height="130dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:visibility="gone"
                android:layout_marginEnd="20dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        app:cardElevation="0dp"
                        android:layout_width="100dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="100dp"
                        app:cardCornerRadius="16dp">
                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shampoo"

                            />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/head3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hair Shampoo"
                            android:fontFamily="@font/prox_bold"
                            android:layout_marginTop="15dp"
                            android:textSize="19sp"
                            android:textColor="#000"/>
                        <TextView
                            android:id="@+id/desc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hair Essentials 200ml Shampoo"
                            android:textSize="15sp"
                            android:fontFamily="@font/prox_semi_bold"
                            android:layout_marginTop="7dp"/>
                        <TextView
                            android:id="@+id/price3"
                            android:layout_marginTop="8dp"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$250"

                            android:layout_gravity="bottom"
                            android:fontFamily="@font/prox_bold"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </HorizontalScrollView>
    </FrameLayout>
