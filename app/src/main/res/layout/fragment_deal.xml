<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/deal_image"
        android:scaleType="centerCrop"
        android:src="@drawable/deal_place_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        android:layout_margin="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="28dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Amazon"
                android:layout_marginBottom="3dp"
                android:textColor="#212121"
                android:fontFamily="@font/prox_light"

                />
        <TextView
            android:id="@+id/deal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:fontFamily="@font/prox_bold"
            android:text="Beats Solo pro"
            android:textColor="#212121" />
        <RatingBar
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="-10dp"
            android:id="@+id/deal_rating"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_marginStart="-70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="2"/>

            <TextView
                android:layout_marginEnd="30dp"
                android:id="@+id/deal_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featuring Active Noise Cancelling that gives you the space to create with fully immersive sound."
                android:textSize="15sp"
                android:fontFamily="@font/prox_regular"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/deal_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5000"
                android:layout_marginBottom="-8dp"
                android:textSize="15sp"
                android:fontFamily="@font/prox_semi_bold"
                />
            <LinearLayout

                android:minHeight="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#212121"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/deal_newprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$3500"
                    android:textSize="25sp"
                    android:fontFamily="@font/prox_semi_bold" />
                <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/deal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Get Deal"
                    android:textAlignment="center"
                    android:fontFamily="@font/prox_bold"
                    android:textAllCaps="false"
                    android:layout_marginStart="50dp"
                    android:textColor="#fff"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:background="@drawable/menu_small_card_grey"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>